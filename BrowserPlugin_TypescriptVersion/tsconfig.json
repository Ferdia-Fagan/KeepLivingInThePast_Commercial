{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./extension/src",
        "baseUrl": "./node_modules",
        "rootDirs": ["./src/TS"],
        "strict": false,
        "alwaysStrict": false
    },

    "include": [
        "./src/TS/**/*.ts",
//        "./tests/**/*.ts",
        "./src/TS/**/*.d.ts",
//        "fileTransformer.js",
//        "tests/SetupTests.test.ts"
    ],

    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]

}