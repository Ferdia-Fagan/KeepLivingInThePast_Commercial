{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./CompleteBuild",
        "baseUrl": "./node_modules",
        "rootDir": "./src",
    },

    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts"
    ]

}