{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./CompleteBuild",
        "baseUrl": "./node_modules",
        "rootDirs": ["./src", "./tests"],
        "strict": false,
        "alwaysStrict": false
    },

    "include": [
        "./src/**/*.ts",
        "./tests/**/*.ts",
        "./src/**/*.d.ts", 
        "fileTransformer.js"
, "tests/SetupTests.ts"    ]

}